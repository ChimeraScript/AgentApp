<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tittleTaskET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tittle"
                android:inputType="textMultiLine|textPersonName"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <EditText
                android:id="@+id/descriptionTaskET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="description"
                android:inputType="textMultiLine|textPersonName"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select days"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                tools:ignore="NestedScrolling">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/monday"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_btn"
                        android:text="M"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/tuesday"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_btn"
                        android:text="T"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/wednesday"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_btn"
                        android:text="W"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/thursday"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_btn"
                        android:text="T"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/friday"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_btn"
                        android:text="F"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/saturday"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_btn"
                        android:text="S"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/sunday"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_btn"
                        android:text="S"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Repetitions (weeks)"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedScrolling">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/repetition1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"/>

                    <TextView
                        android:id="@+id/repetition2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2"/>

                    <TextView
                        android:id="@+id/repetition3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3"/>

                    <TextView
                        android:id="@+id/repetition4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4"/>

                    <TextView
                        android:id="@+id/repetition5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5"/>

                    <TextView
                        android:id="@+id/repetition6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="6"/>

                    <TextView
                        android:id="@+id/repetition7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7"/>

                    <TextView
                        android:id="@+id/repetition8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="8"/>

                    <TextView
                        android:id="@+id/repetition9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="9"/>

                    <TextView
                        android:id="@+id/repetition10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10"/>

                </LinearLayout>
            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/timeTaskET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="Time"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/priorityTaskTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Priority"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/priorityLowTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Low"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/priorityMediumTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Medium"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/priorityHighTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="High"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sendFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white_fachero"
        android:src="@drawable/ic_baseline_add_24"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>